/* BackUp CSS */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
/* CSS general */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #800080; /* Morado */
    color: #FFFFFF; /* Blanco */
}

/* Estilos para el menú de navegación de Bootstrap */
.navbar {
    background-color: #FFFFFF; /* Blanco */
}

.navbar-brand,
.navbar-nav .nav-link {
    color: #4B0082; /* Morado oscuro */
    display: flex; /* Utiliza Flexbox para alinear íconos y texto */
    align-items: center; /* Alinea verticalmente los íconos y el texto */
}
.navbar-nav .nav-link .material-icons {
    margin-right: 0.5em; /* Agrega un margen a la derecha del ícono */
}


/* Estilos para la galería */
.gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 1em; /* Espacio entre los elementos de la galería */
}

.anime {
    flex: 1 1 calc(33.333% - 1em); /* Toma un tercio del ancho, menos el espacio entre elementos */
    box-sizing: border-box; /* Incluye el padding y el borde en el ancho y la altura */
    padding: 1em; /* Espaciado interno */
    background-color: #FFFFFF; /* Fondo blanco */
    border: 1px solid #4B0082; /* Borde morado */
    text-align: center; /* Centra el texto */
}

.anime img {
    max-width: 100%; /* Ajusta la imagen al contenedor */
    height: auto; /* Mantiene la proporción de la imagen */
    margin-bottom: 0.5em; /* Margen inferior */
}

.anime h3 {
    margin: 0.5em 0; /* Margen arriba y abajo */
    color: #4B0082; /* Morado oscuro */
}

.anime p {
    font-size: 0.9em; /* Tamaño de fuente más pequeño */
    color: #333333; /* Gris oscuro */
}
/* siderbar */
.sidebar {
    padding: 1em; /* Espaciado interno */
    border-right: 1px solid #ddd; /* Borde derecho */
}

.sidebar .nav-link {
    display: flex; /* Utiliza Flexbox para alinear íconos y texto */
    align-items: center; /* Alinea verticalmente los íconos y el texto */
    color: #4B0082; /* Morado oscuro */
}
.sidebar h3 {
    color: #4B0082; /* Morado oscuro */
}

.sidebar .nav-link .material-icons {
    margin-right: 0.5em; /* Agrega un margen a la derecha del ícono */
}

.sidebar .nav-link:hover {
    color: #800080; /* Morado al pasar el ratón */
}

/* Estilos para el pie de página */
.site-footer {
    background-color: #4B0082; /* Morado oscuro */
    color: #FFFFFF; /* Blanco */
    padding: 1em 0; /* Espaciado interno */
    text-align: center;
}

.container {
    max-width: 1200px; /* Ancho máximo del contenedor */
    margin: 0 auto; /* Centra el contenedor */
    padding: 0 1em; /* Espaciado interno a los lados */
}

.social-icons {
    margin-bottom: 1em; /* Margen inferior */
}

.social-icon {
    display: inline-block; /* Alineación horizontal */
    margin-right: 1em; /* Margen a la derecha */
    font-size: 1.5em; /* Tamaño del ícono */
    color: #FFFFFF; /* Blanco */
    transition: color 0.3s; /* Transición suave del color */
}

.social-icon:hover {
    color: #FFD700; /* Dorado al pasar el ratón */
}

/* Estilos específicos para cada red social (opcional) */
.social-icon.youtube { color: #FF0000; } /* Rojo para YouTube */
.social-icon.instagram { color: #E1306C; } /* Rosa para Instagram */
.social-icon.tiktok { color: #000000; } /* Negro para TikTok */

/* Ajustes para pantallas más pequeñas */
@media (max-width: 768px) {
    .anime {
        flex: 1 1 calc(50% - 1em); /* Toma la mitad del ancho en pantallas más pequeñas */
    }
}

@media (max-width: 480px) {
    .anime {
        flex: 1 1 100%; /* Toma todo el ancho en pantallas muy pequeñas */
    }
}